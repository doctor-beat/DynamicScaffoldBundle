<?xml version="1.0" encoding="UTF-8"?>  
<result>
    <!-- 
        {% if valid %}
        Valid: {{ valid }} ( Box-id:  {{ result.boxes[0].id }})  
        {% else %}
        #########################################
        Invalid result:
        ( Box-id:  {{ result.boxes ? result.boxes[0].id }})  
        #########################################
        {% endif %}
    -->
    <products>
        {% for product in products %}
        <product>
        <name>{{product.name}}</name>
        <dims>{{product.dimensionString}}</dims>
        <weight>{{product.weight}}</weight>
        </product>
        {% endfor %}
    </products>
    <totalWeight>{{ result.totalWeight }}</totalWeight>
    <totalVolume>{{ result.totalVolume }}</totalVolume>
    <totalCost>{{ result.totalCost }}</totalCost>
    <boxes>
        {%for box in result.boxes %}
        <box>
            <id>{{ box.id}}</id>
            <desc>{{ box.description}}</desc>
            <dims>{{ box.dimensionString}}</dims>
            <maxWeight>{{ box.maxWeight}}</maxWeight>
        </box>
        {%endfor%}
    </boxes>
    <warnings>
        {%for warning in result.warnings %}
        <warning>
            <type>{{ warning.type }}</type>
            <msg>{{ warning.message }}</msg>
        </warning>
        {%endfor%}
    </warnings>
</result>